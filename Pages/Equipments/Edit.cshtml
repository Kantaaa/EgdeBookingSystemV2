@page
@model EgdeBookingSystemV2.Pages.Equipments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2 class="mt-2">Endre detaljer</h2>
<hr />


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Equipment.ID" />
            <div class="form-group">
                <label asp-for="Equipment.Name" class="control-label"></label>
                <input asp-for="Equipment.Name" class="form-control" />
                <span asp-validation-for="Equipment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Info" class="control-label"></label>
                <input asp-for="Equipment.Info" class="form-control" />
                <span asp-validation-for="Equipment.Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.ModelNumber" class="control-label"></label>
                <input asp-for="Equipment.ModelNumber" class="form-control" />
                <span asp-validation-for="Equipment.ModelNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.CategoryID" class="control-label"></label>
                <select asp-for="Equipment.CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                <span asp-validation-for="Equipment.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.LocationID" class="control-label"></label>
                <select asp-for="Equipment.LocationID" class="form-control" asp-items="ViewBag.LocationID"></select>
                <span asp-validation-for="Equipment.LocationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lagre" class="btn btn-egde-blå" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Tilbake til listen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
